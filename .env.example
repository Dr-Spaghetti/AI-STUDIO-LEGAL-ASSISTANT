# ============================================
# Legal Intake SaaS - Environment Variables
# ============================================

# Gemini AI API Configuration
# Get your API key from: https://aistudio.google.com
VITE_API_KEY=your_google_gemini_api_key_here

# Supabase Configuration
# Get these from: https://supabase.com/dashboard/project/_/settings/api
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Optional: Supabase Service Role Key (for server-side operations only, NEVER expose to client)
# SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# For generating TypeScript types from Supabase
SUPABASE_PROJECT_ID=your_project_id

# Optional: Analytics and Monitoring
VITE_ANALYTICS_ENABLED=false

# Sentry Error Tracking
# Get your DSN from: https://sentry.io/settings/projects/YOUR_PROJECT/keys/
# Format: https://PUBLIC_KEY@o0.ingest.sentry.io/PROJECT_ID
VITE_SENTRY_DSN=
SENTRY_DSN=  # For server-side functions

# App Version (for Sentry releases)
VITE_APP_VERSION=1.0.0

# Optional: Tenant Configuration (for development/testing)
# If set, bypasses dynamic tenant resolution
VITE_DEFAULT_TENANT_SLUG=demo

# Optional: Feature Flags
VITE_ENABLE_VOICE=false
VITE_ENABLE_SMS=false
VITE_ENABLE_EMERGENCY_DETECTION=true

# ============================================
# Integration Credentials (Server-side only)
# ============================================

# Twilio SMS Configuration
# Get from: https://console.twilio.com/
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+15551234567

# Calendly OAuth Configuration
# Get from: https://developer.calendly.com/
CALENDLY_CLIENT_ID=your_calendly_client_id
CALENDLY_CLIENT_SECRET=your_calendly_client_secret
CALENDLY_REDIRECT_URI=https://your-app.com/api/integrations/calendly/callback

# Clio Practice Management OAuth
# Get from: https://app.clio.com/settings/developer_applications
CLIO_CLIENT_ID=your_clio_client_id
CLIO_CLIENT_SECRET=your_clio_client_secret
CLIO_REDIRECT_URI=https://your-app.com/api/integrations/clio/callback

# SendGrid Email Configuration (optional)
# Get from: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@your-app.com
